---
// Astro imports
import Logo from '$components/Logo.astro'
import HeaderNavLink from '$components/header/HeaderNavLink.astro'
import HeaderNavLinkExternal from '$components/header/HeaderNavLinkExternal.astro'
import HeaderNavSearchButton from '$components/header/HeaderNavSearchButton.astro'
import DarkMode from '$components/icons/DarkMode.astro'
/**
 * Header navigation used on our website layout
 */
---

<nav class="flex gap-2 m-6 items-center">
  <Logo />
  <HeaderNavLink url="/learn">
    <span class="icon-[heroicons--academic-cap] text-xl" />
    Learn
  </HeaderNavLink>
  <HeaderNavLink url="/reference">
    <span class="icon-[heroicons--command-line] text-xl" />
    Reference
  </HeaderNavLink>
  <HeaderNavLink url="/modules">
    <span class="icon-[heroicons--code-bracket-square] text-xl" />
    Modules
  </HeaderNavLink>
  <HeaderNavLink url="/changelog">
    <span class="icon-[heroicons--megaphone] text-xl" />
    Changelog
  </HeaderNavLink>
  <HeaderNavLink url="/resources">
    <span class="icon-[heroicons--puzzle-piece] text-xl" />
    Resources
  </HeaderNavLink>
  <HeaderNavLink url="/status">
    <span class="icon-[heroicons--signal] text-xl" />
    Status
  </HeaderNavLink>
  <HeaderNavSearchButton />
  <HeaderNavLinkExternal url="">
     <span class="icon-[heroicons--globe-alt-solid] text-xl" />
  </HeaderNavLinkExternal>
  <HeaderNavLinkExternal url="">
     <span class="icon-[fa6-brands--discord] text-xl" />
  </HeaderNavLinkExternal>
  <HeaderNavLinkExternal url="">
      <span class="icon-[fa6-brands--github] text-xl" /> 
  </HeaderNavLinkExternal>
  <DarkMode />
</nav>
