---
/**
 * An internal link, displayed in the Header navigation.
 * @param {string} url - The URL to link to.
 * @param {boolean} is_current - Whether the link is the current page.
 */
const { url, is_current = false } = Astro.props
---

<a
  class="header-nav-link"
  href={url}
  aria-current={is_current ? "page" : false}
>
  <slot />
</a>
<style is:global>
  @layer components {
    a.header-nav-link {
      display: flex;
      padding: 0.25rem 0.5rem;
      gap: 0.25rem;
      align-items: center;
      border-radius: 0.25rem;
      border: 1px solid transparent;
      text-decoration-line: none;
    }
    a.header-nav-link:hover {
      border-color: var(--color-neutral);
    }
    a.header-nav-link:active {
      color: var(--color-primary);
      border-color: var(--color-primary);
    }
    a.header-nav-link[aria-current="page"] {
      background-color: var(--color-lighter);
    }
    .dark a.header-nav-link[aria-current="page"] {
      background-color: var(--color-dark);
    }
  }
</style>
