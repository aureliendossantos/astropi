---
import SearchIcon from "../icons/SearchIcon.astro"
/**
 * A simple button in the Header navigation to open the search modal.
 */
---

<button class="header-nav-search-button">
  <SearchIcon />
  Search
</button>
<style is:global>
  @layer components {
    button.header-nav-search-button {
      display: flex;
      padding: 0.25rem 0.5rem;
      flex-grow: 1;
      gap: 0.25rem;
      align-items: center;
      border-radius: 0.25rem;
      border-width: 1px;
      border-color: transparent;
      background-color: var(--color-lighter);
    }
    .dark button.header-nav-search-button {
      background-color: var(--color-darker);
    }
    button.header-nav-search-button:hover {
      @apply border-neutral-500;
    }
    button.header-nav-search-button:focus {
      @apply text-rose-600 border-rose-600;
    }
  }
</style>
